{
  "$schema": "export_preset_v1",
  "id": "A3_Copper_v1",
  "version": 1,
  "display_name": "A3 Copper",
  "description": "Warm copper and bronze tones on dark background. Warm metallic aesthetic.",

  "bbox_preset": "stockholm_wide",
  "theme": "copper",

  "paper": {
    "format": "A3",
    "orientation": "landscape",
    "width_mm": 420,
    "height_mm": 297
  },

  "render": {
    "dpi": 150,
    "format": "png",
    "render_mode": "print"
  },

  "layers": {
    "hillshade": true,
    "water": true,
    "parks": false,
    "roads": true,
    "buildings": true,
    "contours": true
  },

  "composition": {
    "title": null,
    "subtitle": null,
    "show_attribution": true,
    "show_scale_bar": false
  },

  "constraints": {
    "dpi_locked": false,
    "dpi_min": 72,
    "dpi_max": 300,
    "format_locked": false,
    "allowed_formats": ["png", "pdf"],
    "layers_locked": false,
    "bbox_locked": false,
    "theme_locked": true
  },

  "meta": {
    "created": "2025-12-27",
    "author": "system",
    "use_case": "poster",
    "tags": ["print", "copper", "metallic", "warm", "dark", "a3"]
  }
}
